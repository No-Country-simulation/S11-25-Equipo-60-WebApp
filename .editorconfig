# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# TypeScript and JavaScript files
[*.{ts,js,tsx,jsx}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package.json
[package.json]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 4
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab

# HTML files
[*.html]
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Configuration files
[*.{ini,conf,config}]
indent_size = 4

# Environment files
[.env*]
insert_final_newline = false
max_line_length = off
